{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}

    {# Event selection form #}
    <form action="{{formAction}}" method="get">
        <select name="eventId" class="form-control mb-2">
            <option selected>Choisir un évènement</option>
            {% for event in events %}
                <option value="{{ event.id }}">{{ event.date }} - {{ event.name }}</option>
            {% endfor %}
        </select>
        <input name="_token" type="hidden" value="{{ token }}">
        <input name="submit" type="submit" value="Afficher les tickets" class="btn btn-primary">
    </form>

    {# Tickets table #}
    {% if true %}
        <table class="table table-striped my-4">
            <tr>
                <th></th>
                <th>ID Ticket</th>
                <th>Prénom</th>
                <th>Nom</th>
            </tr>
            {% for ticket in tickets %}
                <tr>
                    <td><input type="checkbox" class="form-control"></td>
                    <td>{{ticket.ticketId}}</td>
                    <td>{{ticket.firstName}}</td>
                    <td>{{ticket.lastName}}</td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}

{% endblock %}
